<%= form_for :post, url: posts_path do |f| %>
  
  <% if @post.errors.any? %>
    <div id ="errorExplanation">
    </div>
  <% end %>

  <p>
     <%= f.label :title %><br>
     <%= f.text_field :title %>
  </p>

  <p> 
     <%= f.label :text %><br>
     <%= f.text_area :text %>
  </p>
  
  <p>
     <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
